<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put,:class => "form-signin", :style => "margin-top:50px;" } do |f| %>
<h2 class="form-signin-heading"><%= t 'devise.invitations.edit.header' %></h2>
  <%= devise_error_messages! %>
  <%= f.hidden_field :invitation_token %>

  <%= f.password_field :password, :class => "input-block-level", :placeholder => "Password" %>

  <%= f.password_field :password_confirmation, :class => "input-block-level", :placeholder => "Password Confirm" %>

  <p><%= f.submit t("devise.invitations.edit.submit_button"), :class => "btn btn-primary" %></p>
<% end %>