			<th>Projects</th>
		</tr>
	<% @clients.each do |client| %>

			<tr>
				<td><%= client.id %></td>
				<td><a data-target="#remote_modal" href="/client?id=<%=client.id%>" role="button" data-toggle="modal"><%= client.name %></a></td>
				<td>
					<% projects = [] %>
					<% client.projects.each do |pro| %>
						<% projects << pro.name %>
					<% end %>
					<%= projects.join(', ') %>
				</td>

	</tr>

	<% end %>
		</table>
	<hr style="margin:0"/>
	<div id="project_list">

	</div>
